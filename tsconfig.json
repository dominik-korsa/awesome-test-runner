{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "newLine": "lf",
    "lib": [
      "es2015"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src"
  ]
}
